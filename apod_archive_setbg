#!/bin/bash
path=$HOME/.APOD
latest=$path/latest

if [ ! $DISPLAY ]; then     # DISPLAY isn't set by crontab
	export DISPLAY=:0.0 # (it's needed to get the desktop size)
fi

PATH="$PATH:$(pwd)"         # In case we're not globally installed

apod_get --archive \
         --path=$path $1

apod_setbg -t $latest/*.txt \
           -i $(find $latest/ -type l -not -iname "*.txt") \
	   -o $path/annotated.png \
#	   -s 1920x1080 # Hardcode if unable to autodetect
